{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "quotes": ["error", "single"],
    // we want to force semicolons
    "semi": ["error", "always"],
    // we use 4 spaces to indent our code
    "indent": ["error", 4],
    // we want to avoid extraneous spaces
    "no-multi-spaces": ["error"],
    "no-console": "off"
  }
}
